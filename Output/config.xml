<config>
  <app>
    <title>Physics II - Pinball</title>
    <organization>CITM</organization>
  </app>

  <renderer>
    <vsync value="true"/>
  </renderer>

  <window>
    <resolution width="768" height="1024" scale="1"/>
    <fullscreen value="false"/>
    <borderless value="false"/>
    <resizable value="false"/>
    <fullscreen_window value="false"/>
  </window>

  <audio>
    <music volume="128"/>
    <fx volume="128"/>
  </audio>

  <scene assetpath = "Assets/" texturepath = "Assets/Textures/" audiopath = "Assets/Audio/" fxfolder = "Fx/">
    <!-- Animstyle: ONCE = 0 | LOOP_FROM_START = 1 | FORWARD_BACKWARD = 2 | LOOP_FORWARD_BACKWARD = 3 | NEVER = 4 -->
    <triangle_left  x="164" y="710" renderable = "true" speed = "0.2" animstyle = "0"/>
    <triangle_right x="450" y="707" renderable = "true" speed = "0.2" animstyle = "0"/>
    <ramp_left  x="115" y="728" renderable = "true" speed = "0.2" animstyle = "0"/>
    <ramp_right x="452" y="538" renderable = "true" speed = "0.2" animstyle = "0"/>

    <flipper_left x = "237" y = "882" renderable = "true" speed = "0.2" animstyle = "0">
      <revolute_joint enable_limit = "true" max_angle = "45" min_angle = "-5" enable_motor = "true" motor_speed = "30" max_torque = "40"/>
      <anchor x = "251" y = "900" radius = "10"/>
    </flipper_left>

    <flipper_right x = "368" y = "882" renderable = "true" speed = "0.2" animstyle = "0">
      <revolute_joint enable_limit = "true" max_angle = "45" min_angle = "-5" enable_motor = "true" motor_speed = "30" max_torque = "40"/>
      <anchor x = "435" y = "900" radius = "10"/>
    </flipper_right>
    

    <border x = "0" y = "0" renderable = "false"/>
    <bridge_down x = "0" y = "0" renderable = "false"/>

    <bridge_up x = "332" y = "320" renderable = "true"/>
    <ping_up x = "438" y = "294" renderable = "true"/>
    <ping_down x = "314" y = "455" renderable = "true"/>

    <launcher_top x = "636" y = "915" renderable = "true"/>
    <launcher_bottom x = "565" y = "940" renderable = "true"/>

    <anim_battery x = "175" y = "170" renderable = "true" speed = "0.1" animstyle = "1"/>
    <anim_power x = "85" y = "505" renderable = "true" speed = "0.1" animstyle = "3"/>
    <anim_circle x = "137" y = "718" renderable = "true" speed = "0.1" animstyle = "1"/>    
    <anim_pink_power x = "210" y = "205" renderable = "true" speed = "0.25" animstyle = "0"/>


    <road_top x = "58" y = "13" renderable = "true" speed = "0.25" animstyle = "3"/>

    <divider_one x = "0" y = "0" renderable = "true" speed = "0.5" animstyle = "3"/>
    <divider_two x = "0" y = "0" renderable = "true" speed = "0.5" animstyle = "3"/>
    <divider_three x = "0" y = "0" renderable = "true"/>
    <divider_four x = "0" y = "0" renderable = "true"/>
    
    <ball x="647" y="672" renderable = "true" texturepath = "Assets/Textures/pinball.png"/>
  </scene>

  <map>
    <mapfolder texturepath = "Assets/Textures/" audiopath = "Assets/Audio/" musicfolder = "Music/"/>
  </map>
  
</config>
