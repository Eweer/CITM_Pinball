<config>
  <app>
    <title>Physics II - Pinball</title>
    <organization>UPC</organization>
  </app>

  <renderer>
    <vsync value="true"/>
  </renderer>

  <window>
    <resolution width="768" height="1024" scale="1"/>
    <fullscreen value="false"/>
    <borderless value="false"/>
    <resizable value="false"/>
    <fullscreen_window value="false"/>
  </window>

  <audio>
    <music volume="128"/>
    <fx volume="128"/>
  </audio>

  <scene assetpath = "Assets/Maps/">

    <ball x="647" y="672" renderable = "true" texturepath = "Assets/Textures/pinball.png"/>
    <triangle_left  x="164" y="710" renderable = "true" speed = "0.2" animstyle = "once"/>
    <triangle_right x="450" y="707" renderable = "true" speed = "0.2" animstyle = "once"/>
    <border x = "0" y = "0" renderable = "false"/>
    <!--
    <item x="200" y="672" texturepath="Assets/Textures/goldCoin.png"/>
    <item x="500" y="672" texturepath="Assets/Textures/goldCoin.png"/>
    -->
  </scene>

  <map>
    <mapfolder path="Assets/Maps/"/>
  </map>
  
</config>
